<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
        "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">


<form-validation>
        <formset>
                <form name="NewsForm">
                        <field property="title" depends="required">
                                <msg key="errors.required" name="required"/>
                                <arg key="input.title" position="0" name="required"/>
                        </field>
                        <field property="brief" depends="required">
                                <msg key="errors.required" name="required"/>
                                <arg key="input.brief" position="0" name="required"/>

                        </field>
                        <field property="content" depends="required">
                                <msg key="errors.required" name="required"/>
                                <arg key="input.content" position="0" name="required"/>
                        </field>
                </form>
        </formset>
</form-validation>
